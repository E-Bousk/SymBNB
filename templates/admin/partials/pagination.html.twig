<div class="d-flex justify-content-center">
    {% set page = pagination.currentPage %}
    {% set NbrPages = pagination.nbrPages %}
    <ul class="pagination">
        <li class="page-item {% if page == 1 %}disabled{% endif %}">
        <a class="page-link" href="{{ path(route, { page: page -1 }) }}">&laquo;</a>
        </li>
        {% for number in 1..NbrPages %}
            <li class="page-item {% if page == number %}active{% endif %}">
            <a class="page-link" href="{{ path(route, { page: number }) }}">{{ number }}</a>
            </li>
        {% endfor %}
        <li class="page-item  {% if page == NbrPages %}disabled{% endif %}">
        <a class="page-link" href="{{ path(route, { page: page +1 }) }}">&raquo;</a>
        </li>
    </ul>
</div>