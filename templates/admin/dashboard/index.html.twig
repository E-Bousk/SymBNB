{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="mb-3 card bg-primary text-white text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{ stats.users }} utilisateurs inscrits</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 card bg-dark text-white text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{ stats.ads }} annonces postées</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 card bg-warning text-white text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{ stats.bookings }} réservations</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 card bg-success text-white text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{ stats.comments }} avis</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="my-3 alert alert-heading"><i class="fas fa-arrow-up"></i> Les annonces les plus populaires</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in ads.bestAds %}
                                <tr>
                                    <td>{{ ad.title }}</td>
                                    <td>
                                        <img class="avatar avatar-mini" src="{{ ad.picture }}" alt="Avatar de {{ ad.firstName }}{{ ad.lastName }}">
                                        {{ ad.firstName }}{{ ad.lastName }}
                                    </td>
                                    <td class="text-center">
                                        <span class="py-2 px-2 badge badge-success">
                                            {{ ad.note | number_format(1, ',', ' ') }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="my-3 alert alert-heading"><i class="fas fa-arrow-down"></i> Les pires annonces</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in ads.worstAds %}
                                <tr>
                                    <td>{{ ad.title }}</td>
                                    <td>
                                        <img class="avatar avatar-mini" src="{{ ad.picture }}" alt="Avatar de {{ ad.firstName }}{{ ad.lastName }}">
                                        {{ ad.firstName }}{{ ad.lastName }}
                                    </td>
                                    <td class="text-center">
                                        <span class="py-2 px-2 badge badge-danger">
                                            {{ ad.note | number_format(1, ',', ' ') }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
