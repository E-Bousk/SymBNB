{% extends 'admin/base.html.twig' %}

{% block title %}Modification de la réservation n°&nbsp;{{ booking.id }}{% endblock %}


{% block body %}
        <div class="container">
            <h1 class="my-3 h2">Modification du réservation n°&nbsp;{{ booking.id }}</h1>
            {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(form.startDate) }}
                        {{ form_row(form.endDate) }}
                        {{ form_row(form.comment) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.booker) }}
                        {{ form_row(form.ad) }}
                        <button class="mt-3 btn btn-primary" type="submit">
                            <i class="fas fa-check"></i>
                            Enregister les modifications
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
{% endblock %}